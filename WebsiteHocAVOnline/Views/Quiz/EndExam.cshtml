@using WebsiteHocAVOnline.Models
@model List<CauHoi>
@{
    ViewBag.Title = "EndExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EndExam</h2>
<style>
    .bai-giang {
        display: none;
    }

    .banner {
        display: none;
    }

    .total-info {
        width: 100%;
        height: 500px;
    }

    .form-total {
        width: 100%;
        height: 300px;
        position: relative;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        z-index: 999;
        background: #242526;
        color: #FFF;
        margin: 1rem 0;
        padding: 3rem 0;
        border: 3px dashed #4cff00;
    }

        .form-total a {
            margin-top: 1rem;
        }
</style>

<div class="total-info">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12  d-block text-center">
                <div class="form-total">
                    <h1 style="text-align: center;">Kết thúc kiểm tra! </h1><br />

                    <h2 style="text-align:center;">Điểm của bạn là: @TempData["score"] </h2>

                    <a style="text-align:center;" class="btn btn-success" href="/Quiz/EditExam?id=@TempData["examid"]">Xem đáp án</a>

                </div>

            </div>
        </div>
    </div>
</div>
